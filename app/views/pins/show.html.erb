<div class="pins container_pins transitions-enabled" id="pins">
<%= render @pin %>

</div>

<!-- Modal  edit action -->

<%= form_for @pin, remote: false, format: 'html', html: { multipart: true }, method: "patch"  do |f| %>
<div class="modal fade" id="editmypin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                </button>
                <h4 class="modal-title" id="myModalLabel">Pin</h4>
            </div>

            <div class="modal-body">

                <div class="field">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: "form-control pin_title" %>
                </div>

                <div class="field">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: "form-control pin_description" %>
                </div>

                <div class="field">
                    <%= f.label :price %>
                    Enter a full dollar value, please!</br>
                <%= f.number_field :price, class: "form-control pin_price" %>
            </div>

            <div class="field">
                <%= f.label :image %>
                <%= f.file_field :image, class: "form-control pin_image" %>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" id="editpinclose">Close</button>
            <%= submit_tag "Update", class: "btn btn-primary" %>
        </div>
    </div>
</div>
</div>
<% end %>
