<div class="container">
  <div class="box panel panel-default" id="pin_<%= pin.id %>">
  <%= link_to (image_tag pin.image.thumb("300x300>").url), pin %>
  <h2>
    <%= link_to pin.title, pin %>
    <div class="box">    
    <% if current_user.id == pin.user_id %>
    <%= link_to 'Edit', edit_pin_path(pin) %>
    <%= link_to 'Delete', pin, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
  </h2>
  <p class="user">
    Submitted by
   <%= pin.user.username %>
  </p>
</div>

</div>
