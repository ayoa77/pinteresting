jQuery ->
    $('body').prepend('<div id="fb-root"></div>')

    $.ajax
        # tried this "#{ window.location.protocol} //connect.facebook.net/en_US/all.js#appId=myappid"
        url: "#{window.location.protocol}//connect.facebook.net/en_US/all.js&appId=<%= ENV["FACEBOOK_APP_ID"] %>"
        dataType: 'script'
        cache: true


window.fbAsyncInit = ->
    FB.init(appId: '<%= ENV["FACEBOOK_APP_ID"] %>', cookie: true)

    $('#sign_in').click (e) ->
        e.preventDefault()
        FB.login (response) ->
            # tried this - window.location = '/auth/facebook/callback' if response.authResponse
            window.location = '/auth/facebook' if response.authResponse

    $('#sign_out').click (e) ->
        FB.getLoginStatus (response) ->
            FB.logout() if response.authResponse
        true
